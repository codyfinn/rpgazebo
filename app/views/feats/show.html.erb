<%- model_class = Feat -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @feat.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @feat.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rule_set_id) %>:</strong></dt>
  <dd><%= link_to @feat.rule_set.name, rule_set_path(@feat.rule_set) %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              feats_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_feat_path(@feat), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              feat_path(@feat),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
