<%- model_class = Encounter -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @encounter.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:experience_points) %>:</strong></dt>
  <dd><%= @encounter.experience_points %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @encounter.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:game_id) %>:</strong></dt>
  <dd><%= link_to @encounter.game.name, game_path(@encounter.game_id) %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              game_encounters_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_game_encounter_path(@encounter), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              game_encounter_path(@encounter),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
