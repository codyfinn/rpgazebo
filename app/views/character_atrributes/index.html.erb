<p id="notice"><%= notice %></p>

<h1>Character Atrributes</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Modifier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_atrributes.each do |character_atrribute| %>
      <tr>
        <td><%= character_atrribute.value %></td>
        <td><%= character_atrribute.modifier %></td>
        <td><%= link_to 'Show', character_atrribute %></td>
        <td><%= link_to 'Edit', edit_character_atrribute_path(character_atrribute) %></td>
        <td><%= link_to 'Destroy', character_atrribute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

