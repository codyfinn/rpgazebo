<%- model_class = Spell -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @spell.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @spell.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rule_set_id) %>:</strong></dt>
  <dd><%= link_to @spell.rule_set.name, spell_path(@spell.rule_set)%></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              spells_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_spell_path(@spell), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              spell_path(@spell),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
