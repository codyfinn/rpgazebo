<%- model_class = BaseAttribute -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @base_attribute.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @base_attribute.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rule_set_id) %>:</strong></dt>
  <dd><%= link_to base_attribute.rule_set.name, rule_set_path(base_attribute.rule_set) %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              base_attributes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_base_attribute_path(@base_attribute), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              base_attribute_path(@base_attribute),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
