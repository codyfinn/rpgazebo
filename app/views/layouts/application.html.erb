<!DOCTYPE html>
<html>
  <head>
    <title>Rpgazebo</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <%= bootstrap_flash %>
      <%= nav_bar brand: "RPGazebo", responsive: true do %>
	  <%= menu_group do %>
              <%= menu_item "Home", root_path %>
              <%= menu_item "About", page_path('about') %>
              <%= menu_item "Rule Sets", rule_sets_path %>
              <%= menu_item "Games", games_path %>
	  <% end %>

	  <%= menu_group pull: :right do %>
	      <%= drop_down current_user ? current_user.name : "Login" do %>
		  <% if current_user %>
		      <%= menu_item "Logout", logout_path %>
		  <% else %>
		      <%= menu_item "Login", new_session_path %>
		  <% end %>
	      <% end %>
	<% end %>
    <% end %>
    <div class="container">
	<%= yield %>
    </div>
  </body>
</html>
