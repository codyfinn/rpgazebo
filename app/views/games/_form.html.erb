<%= form_for @game, :html => { :class => "form-horizontal game" } do |f| %>

    <% if @game.errors.any? %>
	<div id="error_expl" class="panel panel-danger">
	    <div class="panel-heading">
		<h3 class="panel-title"><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h3>
	    </div>
	    <div class="panel-body">
		<ul>
		    <% @game.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		    <% end %>
		</ul>
	    </div>
	</div>
    <% end %>

    <div class="form-group">
	<%= f.label :name, :class => 'control-label col-lg-2' %>
	<div class="col-lg-10">
	    <%= f.text_field :name, :class => 'form-control' %>
	</div>
	<%=f.error_span(:name) %>
    </div>
    <div class="form-group">
	<%= f.label :description, :class => 'control-label col-lg-2' %>
	<div class="col-lg-10">
	    <%= f.text_field :description, :class => 'form-control' %>
	</div>
	<%=f.error_span(:description) %>
    </div>
    <div class="form-group">
	<%= f.label :rule_set_id, :class => 'control-label col-lg-2' %>
	<div class="col-lg-10">
	    <%= collection_select(:game, :rule_set_id, current_user.rule_sets, :id, :name, {}, {:class => "form-control"}) %>
	</div>
	<%=f.error_span(:rule_set_id) %>
    </div>

    <div class="form-group">
	<div class="col-lg-offset-2 col-lg-10">
	    <%= f.submit nil, :class => 'btn btn-primary' %>
	    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                games_path, :class => 'btn btn-default' %>
	</div>
    </div>

<% end %>
