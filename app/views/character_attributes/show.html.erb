<%- model_class = CharacterAttribute -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @character_attribute.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:min) %>:</strong></dt>
  <dd><%= @character_attribute.min %></dd>
  <dt><strong><%= model_class.human_attribute_name(:max) %>:</strong></dt>
  <dd><%= @character_attribute.max %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @character_attribute.description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              character_attributes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_character_attribute_path(@character_attribute), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              character_attribute_path(@character_attribute),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
