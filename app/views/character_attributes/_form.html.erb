<%= form_for @character_attribute, :html => { :class => "form-horizontal character_attribute" } do |f| %>

  <% if @character_attribute.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@character_attribute.errors.count, "error") %> prohibited this character_attribute from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @character_attribute.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :value, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :value, :class => 'form-control' %>
    </div>
    <%=f.error_span(:value) %>
  </div>
  <div class="form-group">
    <%= f.label :modifier, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :modifier, :class => 'form-control' %>
    </div>
    <%=f.error_span(:modifier) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                character_attributes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
